<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

//음식 사진
    <androidx.cardview.widget.CardView
        android:id="@+id/food_cv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/food_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/food_info_img"
            />

    </androidx.cardview.widget.CardView>

   //음식 이름
    <TextView
        android:id="@+id/food_name_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/food_cv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:text="사과"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    //음식 칼로리
    <TextView
        android:id="@+id/food_kcal_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/food_name_tv"
        app:layout_constraintTop_toBottomOf="@id/food_name_tv"
        android:text="10g 당 5.21kcal"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"/>


    //발바닥
    <LinearLayout
        android:id="@+id/food_foot_ll"
        android:layout_width="135dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/food_cv"
        app:layout_constraintBottom_toBottomOf="@id/food_cv"
        app:layout_constraintStart_toEndOf="@id/food_kcal_tv"
        >

        <ImageView
            android:id="@+id/food_foot1_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/footprint" />

        <ImageView
            android:id="@+id/food_foot2_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/footprint"
            android:layout_marginStart="9dp"
            />
        <ImageView
            android:id="@+id/food_foot3_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/footprint"
            android:layout_marginStart="9dp"
            />
        <ImageView
            android:id="@+id/food_foot4_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/footprint"
            android:layout_marginStart="9dp"
            />
        <ImageView
            android:id="@+id/food_foot5_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/footprint_off"
            android:layout_marginStart="9dp"
            />

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>
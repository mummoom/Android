<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/dobgender_logo_iv"
        android:layout_width="220dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ex_dog1"
        />

    <TextView
        android:id="@+id/doggender_m_tv"
        app:layout_constraintStart_toStartOf="@id/dobgender_logo_iv"
        app:layout_constraintEnd_toStartOf="@id/doggender_w_tv"
        app:layout_constraintTop_toBottomOf="@id/dobgender_logo_iv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_m_btn"
        android:text="남자"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/doggender_w_tv"
        app:layout_constraintEnd_toEndOf="@id/dobgender_logo_iv"
        app:layout_constraintStart_toEndOf="@id/doggender_m_tv"
        app:layout_constraintTop_toBottomOf="@id/dobgender_logo_iv"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_w_btn"
        android:text="여자"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/doggender_neutering_tv"
        app:layout_constraintTop_toBottomOf="@id/doggender_m_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중성화여부"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>





</androidx.constraintlayout.widget.ConstraintLayout>
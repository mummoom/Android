<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="410dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/modifyprofileDialog_addProfile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강아지 프로필 수정"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#EDC06D"
        android:fontFamily="@font/applesdgothicneob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/modifyprofileDialog_line_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_addProfile_tv" />

    <TextView
        android:id="@+id/modifyprofileDialog_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_line_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/modifyprofileDialog_name_et"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:background="@drawable/rounding_edit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/modifyprofileDialog_name_tv"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_name_tv"
        android:paddingStart="10dp"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>


    <TextView
        android:id="@+id/modifyprofileDialog_species_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_name_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/modifyprofileDialog_type_sp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_species_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_spinner"
        android:dropDownWidth="50dp"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/modifyprofileDialog_type_btn"
        app:layout_constraintTop_toTopOf="@id/modifyprofileDialog_type_sp"
        app:layout_constraintBottom_toBottomOf="@id/modifyprofileDialog_type_sp"
        app:layout_constraintEnd_toEndOf="@id/modifyprofileDialog_type_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <TextView
        android:id="@+id/modifyprofileDialog_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_type_sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/modifyprofileDialog_m_tv"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="남아"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_gender_tv"
        app:layout_constraintStart_toStartOf="@id/modifyprofileDialog_gender_tv"
        android:gravity="center"
        android:background="@drawable/bg_modify_uncheck_btn"
        />
    <TextView
        android:id="@+id/modifyprofileDialog_w_tv"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="여아"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_gender_tv"
        app:layout_constraintEnd_toEndOf="@id/modifyprofileDialog_type_sp"
        android:gravity="center"
        android:background="@drawable/bg_modify_uncheck_btn"
        />

    <TextView
        android:id="@+id/modifyprofileDialog_birth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_m_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/modifyprofileDialog_year_sp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_birth_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_spinner"
        android:dropDownWidth="50dp"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/modifyprofileDialog_year_btn"
        app:layout_constraintTop_toTopOf="@id/modifyprofileDialog_year_sp"
        app:layout_constraintBottom_toBottomOf="@id/modifyprofileDialog_year_sp"
        app:layout_constraintEnd_toEndOf="@id/modifyprofileDialog_year_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <Spinner
        android:id="@+id/modifyprofileDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/modifyprofileDialog_year_sp"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:dropDownWidth="50dp"
        android:background="@drawable/bg_spinner"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/modifyprofileDialog_month_btn"
        app:layout_constraintTop_toTopOf="@id/modifyprofileDialog_month_sp"
        app:layout_constraintBottom_toBottomOf="@id/modifyprofileDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_month_sp"
        app:layout_constraintEnd_toEndOf="@id/modifyprofileDialog_month_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <Spinner
        android:id="@+id/modifyprofileDialog_day_sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/modifyprofileDialog_month_sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:dropDownWidth="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_spinner"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/modifyprofileDialog_day_btn"
        app:layout_constraintTop_toTopOf="@id/modifyprofileDialog_day_sp"
        app:layout_constraintBottom_toBottomOf="@id/modifyprofileDialog_day_sp"
        app:layout_constraintEnd_toEndOf="@id/modifyprofileDialog_day_sp"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_day_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/modifyprofileDialog_cancelBtn_cv"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/modifyprofileDialog_doneBtn_cv"
        app:layout_constraintTop_toBottomOf="@id/modifyprofileDialog_day_sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/modifyprofileDialog_cancelBtn_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c4c4c4"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/applesdgothicneom"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/modifyprofileDialog_doneBtn_cv"
        android:layout_width="110dp"
        android:layout_height="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toEndOf="@id/modifyprofileDialog_cancelBtn_cv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/modifyprofileDialog_cancelBtn_cv"
        app:layout_constraintBottom_toBottomOf="@id/modifyprofileDialog_cancelBtn_cv">

        <TextView
            android:id="@+id/modifyprofileDialog_doneBtn_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffd231"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/applesdgothicneom"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
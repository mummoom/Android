<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tos_title_tv"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="멍박사의 밥학사전 약관 동의"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneoh"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:background="@color/main_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="50dp"
                />

            <ImageView
                android:id="@+id/tos_back_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mum_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tos_title_tv"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/tos_content_tv"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="멍박사의 밥학사전 서비스 이용을 위해서는 필수 약관 동의가 필요합니다."
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tos_title_tv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/tos_line_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EAEAEA"
                app:layout_constraintTop_toBottomOf="@id/tos_content_tv"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tos_all_agree_off_iv"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/tos_off"
                app:layout_constraintTop_toBottomOf="@id/tos_line_v"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:id="@+id/tos_all_agree_on_iv"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/tos_on"
                app:layout_constraintTop_toBottomOf="@id/tos_line_v"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tos_all_agree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 전체 동의하기"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/applesdgothicneoh"
                app:layout_constraintTop_toBottomOf="@id/tos_line_v"
                app:layout_constraintStart_toEndOf="@id/tos_all_agree_off_iv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/tos_line2_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EAEAEA"
                app:layout_constraintTop_toBottomOf="@id/tos_all_agree_tv"
                android:layout_marginTop="20dp"/>



            <LinearLayout
                android:id="@+id/tos_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toBottomOf="@id/tos_line2_v"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:paddingBottom="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tos_use_title_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tos_use_agree_off_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/tos_off"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        />
                    <ImageView
                        android:id="@+id/tos_use_agree_on_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/tos_on"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/tos_use_agree_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(필수) 멍박사의밥학사전 이용약관"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/applesdgothicneom"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tos_use_agree_off_iv"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"/>

                    <ImageView
                        android:id="@+id/tos_use_more_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tos_use_content_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:visibility="gone">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tos_terms_of_Use"
                            android:textSize="15sp"
                            android:fontFamily="@font/applesdgothicneom"
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"/>
                    </androidx.core.widget.NestedScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tos_privacy_title_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tos_privacy_agree_off_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/tos_off"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        />
                    <ImageView
                        android:id="@+id/tos_privacy_agree_on_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/tos_on"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/tos_privacy_agree_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(필수) 개인정보 수집 및 이용동의"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/applesdgothicneom"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tos_privacy_agree_off_iv"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"/>
                    <ImageView
                        android:id="@+id/tos_privacy_more_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tos_privacy_content_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <TextView
                        android:id="@+id/tos_info_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집하는 개인정보 항목"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/applesdgothicneom"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="67dp"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:id="@+id/tos_line3_v"
                        android:layout_width="280dp"
                        android:layout_height="2dp"
                        android:background="#EAEAEA"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tos_info_content_tv"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/tos_info_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용자의 이름"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/applesdgothicneom"
                        app:layout_constraintTop_toBottomOf="@id/tos_line3_v"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="67dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/tos_info_useremail_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용자의 나이"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/applesdgothicneom"
                        app:layout_constraintTop_toBottomOf="@id/tos_info_username_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="67dp"
                        android:layout_marginTop="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tos_okay_btn"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:text="확인"
                    android:fontFamily="@font/applesdgothicneoh"
                    android:textSize="17sp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_login_login_btn"
                    />

            </LinearLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>










</androidx.constraintlayout.widget.ConstraintLayout>
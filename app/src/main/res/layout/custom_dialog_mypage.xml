<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="470dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mypageDialog_addProfile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강아지 프로필 추가"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#EDC06D"
        android:fontFamily="@font/applesdgothicneob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/mypageDialog_line_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_addProfile_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mypageDialog_camera_cv"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="31dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_line_view"
        app:cardBackgroundColor="#e9e9e9">

        <ImageView
            android:id="@+id/mypageDialog_camera_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_camera_white"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mypageDialog_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_camera_cv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/mypageDialog_name_et"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:background="@drawable/rounding_edit"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintStart_toStartOf="@id/mypageDialog_name_tv"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_name_tv"
        android:paddingStart="10dp"/>


    <TextView
        android:id="@+id/mypageDialog_species_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_name_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/mypageDialog_type_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_species_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"
        android:background="@drawable/bg_spinner"
        android:dropDownWidth="50dp" />

    <ImageView
        android:id="@+id/mypageDialog_type_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_type_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_type_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_type_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <TextView
        android:id="@+id/mypageDialog_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_type_sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/mypageDialog_m_tv"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="남아"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_gender_tv"
        app:layout_constraintStart_toStartOf="@id/mypageDialog_gender_tv"
        android:gravity="center"
        android:background="@drawable/bg_modify_uncheck_btn"
        />
    <TextView
        android:id="@+id/mypageDialog_w_tv"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="여아"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_gender_tv"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_type_sp"
        android:gravity="center"
        android:background="@drawable/bg_modify_uncheck_btn"
        />

    <TextView
        android:id="@+id/mypageDialog_birth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_m_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/mypageDialog_year_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_spinner"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"
        android:dropDownWidth="50dp" />

    <ImageView
        android:id="@+id/mypageDialog_year_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_year_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_year_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_year_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <Spinner
        android:id="@+id/mypageDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/mypageDialog_year_sp"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:dropDownWidth="50dp"
        android:background="@drawable/bg_spinner"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/mypageDialog_month_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_month_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_month_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_month_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <Spinner
        android:id="@+id/mypageDialog_day_sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/mypageDialog_month_sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:dropDownWidth="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_spinner"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneom"/>

    <ImageView
        android:id="@+id/mypageDialog_day_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_day_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_day_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_day_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_day_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mypageDialog_cancelBtn_cv"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mypageDialog_doneBtn_cv"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_day_sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/mypageDialog_cancelBtn_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c4c4c4"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/applesdgothicneom"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mypageDialog_doneBtn_cv"
        android:layout_width="110dp"
        android:layout_height="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toEndOf="@id/mypageDialog_cancelBtn_cv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_cancelBtn_cv"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_cancelBtn_cv">

        <TextView
            android:id="@+id/mypageDialog_doneBtn_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffd231"
            android:gravity="center"
            android:text="확인"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
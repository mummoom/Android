<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="405dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mypageDialog_addProfile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강아지 프로필 추가"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#EDC06D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp" />

    <View
        android:id="@+id/mypageDialog_line_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_addProfile_tv" />

    <TextView
        android:id="@+id/mypageDialog_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_line_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/mypageDialog_name_et"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:background="@drawable/rounding_edit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/mypageDialog_name_tv"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_name_tv"/>


    <TextView
        android:id="@+id/mypageDialog_species_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_name_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/mypageDialog_species_et"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:background="@drawable/rounding_edit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/mypageDialog_species_tv"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_species_tv"/>

    <TextView
        android:id="@+id/mypageDialog_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_species_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/mypageDialog_gender_et"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:background="@drawable/rounding_edit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/mypageDialog_gender_tv"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_gender_tv"/>

    <TextView
        android:id="@+id/mypageDialog_birth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_gender_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/mypageDialog_year_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_spinner"
        android:dropDownWidth="50dp"


        />
    <ImageView
        android:id="@+id/mypageDialog_year_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_year_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_year_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_year_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>
    <Spinner
        android:id="@+id/mypageDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/mypageDialog_year_sp"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:spinnerMode="dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:dropDownWidth="50dp"
        android:background="@drawable/bg_dialog_spinner"
        />
    <ImageView
        android:id="@+id/mypageDialog_month_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_month_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_month_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_month_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_month_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <Spinner
        android:id="@+id/mypageDialog_day_sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_birth_tv"
        app:layout_constraintStart_toEndOf="@id/mypageDialog_month_sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:dropDownWidth="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_dialog_spinner"
        android:spinnerMode="dialog" />
    <ImageView
        android:id="@+id/mypageDialog_day_btn"
        app:layout_constraintTop_toTopOf="@id/mypageDialog_day_sp"
        app:layout_constraintBottom_toBottomOf="@id/mypageDialog_day_sp"
        app:layout_constraintEnd_toEndOf="@id/mypageDialog_day_sp"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_day_sp"
        android:layout_marginEnd="5dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>


    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypageDialog_day_sp">

        <TextView
            android:id="@+id/mypageDialog_doneBtn_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c4c4c4"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dogname_logo_iv"
        android:layout_width="220dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ex_dog1"
        />

    <TextView
        android:id="@+id/dogname_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dogname_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="강아지의 이름은 무엇인가요?"
        android:textColor="@color/infoname_tv"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <EditText
        android:id="@+id/dogname_name_et"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dogname_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/doogname_next_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/dogfootprint"
        app:layout_constraintEnd_toEndOf="@id/dogname_name_et"
        app:layout_constraintBottom_toBottomOf="@id/dogname_name_et"
        app:layout_constraintTop_toTopOf="@id/dogname_name_et"/>


</androidx.constraintlayout.widget.ConstraintLayout>
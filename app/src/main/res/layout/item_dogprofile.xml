<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_dogprofile_cl"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_dogprofile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/item_dogprofile_profile_cv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_dogprofile_profile_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dog_profile"
            />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_dogprofile_dogName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강아지 이름"
            android:fontFamily="@font/applesdgothicneoh"
            android:textColor="#675926"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/item_dogprofile_profile_cv"
            app:layout_constraintTop_toTopOf="@id/item_dogprofile_profile_cv"
            app:layout_constraintBottom_toBottomOf="@id/item_dogprofile_dogGender_tv"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/item_dogprofile_dogtype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="강아지 종류"
            android:textColor="#444444"
            android:textSize="12sp"
            android:fontFamily="@font/applesdgothicneom"
            app:layout_constraintStart_toStartOf="@id/item_dogprofile_dogName_tv"
            app:layout_constraintTop_toBottomOf="@id/item_dogprofile_dogName_tv" />


        <TextView
            android:id="@+id/item_dogprofile_dogbirth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text="2022.02.01"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:fontFamily="@font/applesdgothicneom"
            app:layout_constraintStart_toStartOf="@id/item_dogprofile_dogName_tv"
            app:layout_constraintBottom_toBottomOf="@id/item_dogprofile_profile_cv" />

        <ImageView
            android:id="@+id/item_dogprofile_moreBtn_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_more_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/item_dogprofile_dogGender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="#c4c4c4"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/item_dogprofile_dogName_tv"
            app:layout_constraintStart_toEndOf="@id/item_dogprofile_dogName_tv"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
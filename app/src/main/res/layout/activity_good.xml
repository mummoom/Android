<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    //타이틀
    <TextView
        android:id="@+id/good_title_tv"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/type_title"
        android:text="좋은 음식"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"/>
    //o
    <ImageView
        android:id="@+id/good_ic_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/good_title_tv"
        app:layout_constraintTop_toTopOf="@id/good_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/good_title_tv"
        android:layout_marginStart="155dp"
        android:src="@drawable/ic_good"/>

    //이전으로
    <ImageView
        android:id="@+id/good_back_iv"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintTop_toTopOf="@id/good_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/good_title_tv"
        app:layout_constraintStart_toStartOf="@id/good_title_tv"
        android:layout_marginStart="15dp" />

    //검색창
    <EditText
        android:id="@+id/good_search_et"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@id/good_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/home_search_background"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch"/>
    //검색아이콘
    <ImageView
        android:id="@+id/good_searchIc_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_home_search"
        app:layout_constraintTop_toTopOf="@id/good_search_et"
        app:layout_constraintEnd_toEndOf="@id/good_search_et"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"/>

    //구분선
    <View
        android:id="@+id/good_divide_v"
        android:layout_width="0dp"
        android:layout_height="20px"
        android:layout_marginTop="30dp"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@id/good_search_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    //육류 정보들
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/good_info_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/good_divide_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        tools:listitem="@layout/item_food"
        android:overScrollMode="never"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chageimageDialog_addProfile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 변경"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#EDC06D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/changeimageDialog_line_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@id/chageimageDialog_addProfile_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/changeimageDialog_icon1_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/changeimageDialog_line_view"
        app:layout_constraintTop_toBottomOf="@id/changeimageDialog_line_view">

        <ImageView
            android:id="@+id/changeimageCustom_icon1_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/changeimageCustom_albumFunc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범에서 사진 가져오기"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/changeimageDialog_icon1_cv"
        app:layout_constraintTop_toTopOf="@id/changeimageDialog_icon1_cv"
        app:layout_constraintBottom_toBottomOf="@id/changeimageDialog_icon1_cv"
        android:layout_marginStart="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/changeimageDialog_icon2_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/changeimageDialog_icon1_cv"
        app:layout_constraintTop_toBottomOf="@id/changeimageDialog_icon1_cv">

        <ImageView
            android:id="@+id/changeimageCustom_icon2_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/changeimageCustom_normalFunc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본 일러스트 선택"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/changeimageDialog_icon2_cv"
        app:layout_constraintTop_toTopOf="@id/changeimageDialog_icon2_cv"
        app:layout_constraintBottom_toBottomOf="@id/changeimageDialog_icon2_cv"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
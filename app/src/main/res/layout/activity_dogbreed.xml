<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/dogbreed_logo_iv"
        android:layout_width="220dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ex_dog1"
        />

    <TextView
        android:id="@+id/dogbreed_breed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dogbreed_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="강아지의 종은 무엇인가요?"
        android:textColor="@color/infoname_tv"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/dogbreed_bread_sp"
        app:layout_constraintTop_toBottomOf="@id/dogbreed_breed_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="288dp"
        android:layout_height="30dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_spinner"
        android:dropDownWidth="50dp"
        />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/dogbreed_bread_sp"
        app:layout_constraintBottom_toBottomOf="@id/dogbreed_bread_sp"
        app:layout_constraintEnd_toEndOf="@id/dogbreed_bread_sp"
        android:layout_marginEnd="10dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/arrow"/>

    <TextView
        android:id="@+id/dogbreed_previous_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogbreed_bread_sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:background="@drawable/bg_previous_btn"
        android:text="이전"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/dogbreed_next_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogbreed_bread_sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:background="@drawable/bg_previous_btn"
        android:text="다음"
        android:textSize="15sp"
        android:textColor="@color/main_color"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mysetting_backarrow_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mysetting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/mysetting_backarrow_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/mysetting_line_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@id/mysetting_title_tv"
        android:layout_marginTop="15dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/mysetting_icon1_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mysetting_line_view">

        <ImageView
            android:id="@+id/mysetting_icon1_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mysetting_notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/mysetting_icon1_cv"
        app:layout_constraintTop_toTopOf="@id/mysetting_icon1_cv"
        app:layout_constraintBottom_toBottomOf="@id/mysetting_icon1_cv"
        android:layout_marginStart="17dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/mysetting_icon2_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/mysetting_icon1_cv"
        app:layout_constraintTop_toBottomOf="@id/mysetting_icon1_cv">

        <ImageView
            android:id="@+id/mysetting_icon2_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mysetting_update_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업데이트 및 버전"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/mysetting_icon2_cv"
        app:layout_constraintTop_toTopOf="@id/mysetting_icon2_cv"
        app:layout_constraintBottom_toBottomOf="@id/mysetting_icon2_cv"
        android:layout_marginStart="17dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/mysetting_icon3_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/mysetting_icon2_cv"
        app:layout_constraintTop_toBottomOf="@id/mysetting_icon2_cv">

        <ImageView
            android:id="@+id/mysetting_icon3_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mysetting_notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 및 푸쉬 설정"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/mysetting_icon3_cv"
        app:layout_constraintTop_toTopOf="@id/mysetting_icon3_cv"
        app:layout_constraintBottom_toBottomOf="@id/mysetting_icon3_cv"
        android:layout_marginStart="17dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/mysetting_icon4_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/mysetting_icon3_cv"
        app:layout_constraintTop_toBottomOf="@id/mysetting_icon3_cv">

        <ImageView
            android:id="@+id/mysetting_icon4_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mysetting_ask_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의하기"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/mysetting_icon4_cv"
        app:layout_constraintTop_toTopOf="@id/mysetting_icon4_cv"
        app:layout_constraintBottom_toBottomOf="@id/mysetting_icon4_cv"
        android:layout_marginStart="17dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/mysetting_icon5_cv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/mysetting_icon4_cv"
        app:layout_constraintTop_toBottomOf="@id/mysetting_icon4_cv">

        <ImageView
            android:id="@+id/mysetting_icon5_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mysetting_appInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 정보"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/mysetting_icon5_cv"
        app:layout_constraintTop_toTopOf="@id/mysetting_icon5_cv"
        app:layout_constraintBottom_toBottomOf="@id/mysetting_icon5_cv"
        android:layout_marginStart="17dp"/>


    <TextView
        android:id="@+id/mysetting_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>